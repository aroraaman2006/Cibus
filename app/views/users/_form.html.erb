<div class="col-md-6 col-md-offset-3">
<div class="signup-form">

<h1>New User</h1>

<%= simple_form_for(@user) do |f| %>
	<%= f.error_notification %>

	<%= f.input :name %>
	<%= f.input :email %>
	<%= f.input :password %>
	<%= f.button :submit %>
<% end %>
<br>
<%= link_to 'Back', root_path %>

</div>
</div>