<%= link_to "Add New Category", new_category_path %>
<h1> Categories list - <h1>
<% @categories.each do |category| %>
  <h3><%= category.name %></h3>
  <%= link_to "Edit", edit_category_path(category), class: "btn btn-custom" %>
    <%= link_to "Delete", category_path(category), method: :delete, data:{confirm: "Are you sure you want to delete this?"}, class: "btn btn-custom" %>
<% end %>