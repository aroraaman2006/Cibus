<h1>Edit Review</h1>
<%= simple_form_for([@restaurant, @review]) do |f| %>
  <div id="rating-form" data-score="<%= @review.rating %>"><label>Rating :</label></div>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    score: function(){
      return $(this).attr('data-score');
    },
   	scoreName: 'review[rating]'
	
  });
</script>